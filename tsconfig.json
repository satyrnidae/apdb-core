{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./bin",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src"
  },
  "include": [
      "src/**/*.ts",
      "src/config/*.json"
  ],
  "exclude": [
    "config/config.init.json"
  ]
}
